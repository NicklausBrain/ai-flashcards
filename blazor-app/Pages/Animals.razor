@page "/Animals"

@using blazor_app.Core;

@inject HttpClient Http
@inject NavigationManager NavigationManager

@code {
    private Core.FlashCard[] animals;

    protected override async Task OnInitializedAsync()
    {
        animals = await Http.GetFromJsonAsync<Core.FlashCard[]>($"{NavigationManager.BaseUri}/data/animals.json");
    }
}

<div class="row">
    @if (animals == null)
    {
        <p>Loading...</p>
    }
    else
    {
        @foreach (var animal in animals)
        {
            <FlashCard Data="@animal"></FlashCard>
        }
    }
</div>
