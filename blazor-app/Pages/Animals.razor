@page "/Animals"

@using blazor_app.Core;

@inject HttpClient Http
@inject NavigationManager NavigationManager

@code {
    private Core.FlashCard[]? animals;

    protected override async Task OnInitializedAsync()
    {
        animals = await Http.GetFromJsonAsync<Core.FlashCard[]>($"{NavigationManager.BaseUri}/data/animals.json");
    }
}

<FlashCardsList Cards="@animals"></FlashCardsList>
