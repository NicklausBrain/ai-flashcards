@page "/Transport"

@using blazor_app.Core;

@inject HttpClient Http
@inject NavigationManager NavigationManager

@code {
    private Core.FlashCard[]? transport;

    protected override async Task OnInitializedAsync()
    {
        transport = await Http.GetFromJsonAsync<Core.FlashCard[]>($"{NavigationManager.BaseUri}/data/transport.json");
    }
}

<FlashCardsList Cards="@transport"></FlashCardsList>
