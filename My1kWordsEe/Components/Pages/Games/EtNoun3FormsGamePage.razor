@page "/forms-game/et"
@page "/forms-game/et/{etNoun}"

@rendermode @(new InteractiveServerRenderMode(prerender: false))

@using BlazorBootstrap
@using CSharpFunctionalExtensions
@using My1kWordsEe.Components.Layout
@using My1kWordsEe.Models
@using My1kWordsEe.Models.Games
@using My1kWordsEe.Models.Semantics
@using My1kWordsEe.Services
@using My1kWordsEe.Services.Cqs
@using My1kWordsEe.Services.Scoped
@using Microsoft.ApplicationInsights
@using System.Text.RegularExpressions

@inject EtNoun3FormsGameFactory EtNoun3FormsGameFactory;
@inject NavigationManager Navigation;
@inject TelemetryClient telemetry;
@inject EtWordsCache etWordsCache;

@code {
    [Parameter]
    public string EtNoun { get; init; } = string.Empty;

    Maybe<EtNoun3FormsGame> Game;
    Maybe<string> GameGenerationError;

    private string GetRandomNoun()
    {
        var random = new Random(Environment.TickCount);

        var nouns = etWordsCache.AllWords.Where(w => w.DefaultSense.IsNoun).ToArray();

        var noun = nouns[random.Next(0, nouns.Length)];
        return noun.Value;
    }

    protected override async Task OnParametersSetAsync()
    {
        telemetry.TrackPageView(nameof(EtNoun3FormsGamePage));

        if (string.IsNullOrEmpty(EtNoun))
        {
            // Pick a random noun
            var randomNoun = GetRandomNoun();
            Navigation.NavigateTo($"/forms-game/et/{randomNoun}", forceLoad: true);
        }
        else
        {
            var gameGen = await EtNoun3FormsGameFactory.Generate(EtNoun);
            if (gameGen.IsSuccess)
            {
                Game = gameGen.Value;
            }
            else
            {
                GameGenerationError = gameGen.Error;
            }
            await base.OnParametersSetAsync();
        }
    }

    private void OnSubmit()
    {
        Game.Value.Submit();
    }

    private void OnGiveUp()
    {
        Game.Value.GiveUp();
    }

    private void RegenGame()
    {
        Navigation.NavigateTo($"/forms-game/et/{GetRandomNoun()}", forceLoad: true);
    }

    private string MaskWord(string sentence, string word, string? userWord)
    {
        if (string.IsNullOrEmpty(sentence) || string.IsNullOrEmpty(word))
        {
            return sentence;
        }

        var replacement = string.IsNullOrEmpty(userWord) ? "_______" : userWord;
        return Regex.Replace(sentence, Regex.Escape(word), replacement, RegexOptions.IgnoreCase);
    }
}

<div class="text-left">
    <div class="row">
        <div class="col-7">
            <h3>Nimisõna 3 vormi (Noun 3 Forms)</h3>
        </div>
        <div class="col-5">
            @if (Game.HasValue && Game.Value.IsFinished)
            {
                <Button Color="ButtonColor.Primary" Type="ButtonType.Reset" @onclick="@RegenGame">
                    <i class="bi bi-arrow-repeat"></i>
                    Try again!
                </Button>
            }
        </div>
    </div>

    @if (Game.HasValue)
    {
        var game = Game.Value;

        <div class="row mb-3">
            <div class="col-12">
                <h5>
                    Base Word: <a href="/word/@game.NimetavSõna.Et" target="_blank"><strong>@game.NimetavSõna.Et</strong></a> (@game.NimetavSõna.En)
                </h5>
            </div>
        </div>

        <div class="row">
            @* Nimetav *@
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-header">Nimetav (Nominative)</div>
                    <div class="card-body">
                        <p class="card-text">@MaskWord(game.NimetavLause.Et, game.NimetavSõna.Et, game.UserNimetavSõna)</p>
                        @if (game.IsFinished)
                        {
                            <div class="mb-2">
                                @if (game.IsNimetavOk)
                                {
                                    <span class="text-success fw-bold">@game.NimetavSõna.Et</span>
                                    <i class="bi bi-check-circle-fill text-success"></i>
                                }
                                else
                                {
                                    <span class="text-danger text-decoration-line-through">@game.UserNimetavSõna</span>
                                    <br />
                                    <span class="text-success fw-bold">@game.NimetavSõna.Et</span>
                                }
                            </div>
                        }
                        else
                        {
                            <input type="text" value="@game.UserNimetavSõna"
                                @oninput="e => { game.UserNimetavSõna = e.Value?.ToString() ?? string.Empty; }"
                                class="form-control" placeholder="Type word form..." />
                        }
                    </div>
                </div>
            </div>

            @* Omastav *@
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-header">Omastav (Genitive)</div>
                    <div class="card-body">
                        <p class="card-text">@MaskWord(game.OmastavLause.Et, game.OmastavSõna.Et, game.UserOmastavSõna)</p>
                        @if (game.IsFinished)
                        {
                            <div class="mb-2">
                                @if (game.IsOmastavOk)
                                {
                                    <span class="text-success fw-bold">@game.OmastavSõna.Et</span>
                                    <i class="bi bi-check-circle-fill text-success"></i>
                                }
                                else
                                {
                                    <span class="text-danger text-decoration-line-through">@game.UserOmastavSõna</span>
                                    <br />
                                    <span class="text-success fw-bold">@game.OmastavSõna.Et</span>
                                }
                            </div>
                        }
                        else
                        {
                            <input type="text" value="@game.UserOmastavSõna"
                                @oninput="e => { game.UserOmastavSõna = e.Value?.ToString() ?? string.Empty; }"
                                class="form-control" placeholder="Type word form..." />
                        }
                    </div>
                </div>
            </div>

            @* Osastav *@
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-header">Osastav (Partitive)</div>
                    <div class="card-body">
                        <p class="card-text">@MaskWord(game.OsastavLause.Et, game.OsastavSõna.Et, game.UserOsastavSõna)</p>
                        @if (game.IsFinished)
                        {
                            <div class="mb-2">
                                @if (game.IsOsastavOk)
                                {
                                    <span class="text-success fw-bold">@game.OsastavSõna.Et</span>
                                    <i class="bi bi-check-circle-fill text-success"></i>
                                }
                                else
                                {
                                    <span class="text-danger text-decoration-line-through">@game.UserOsastavSõna</span>
                                    <br />
                                    <span class="text-success fw-bold">@game.OsastavSõna.Et</span>
                                }
                            </div>
                        }
                        else
                        {
                            <input type="text" value="@game.UserOsastavSõna"
                                @oninput="e => { game.UserOsastavSõna = e.Value?.ToString() ?? string.Empty; }"
                                class="form-control" placeholder="Type word form..." />
                        }
                    </div>
                </div>
            </div>
        </div>

        @if (!game.IsFinished)
        {
            <div class="row mt-4">
                <div class="col-12 text-center">
                    <button class="btn btn-primary me-2" @onclick="OnSubmit">Submit</button>
                    <button class="btn btn-secondary" @onclick="OnGiveUp">Give Up</button>
                </div>
            </div>
        }
    }
    else if (GameGenerationError.HasNoValue)
    {
        <div class="d-flex justify-content-center">
            <Spinner />
        </div>
    }

    @if (GameGenerationError.HasValue)
    {
        <p class="text-danger">
            @GameGenerationError
        </p>
    }
</div>