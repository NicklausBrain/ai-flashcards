@page "/forms-game/et"
@page "/forms-game/et/{etNoun}"

@rendermode @(new InteractiveServerRenderMode(prerender: false))

@using BlazorBootstrap
@using CSharpFunctionalExtensions
@using My1kWordsEe.Components.Layout
@using My1kWordsEe.Models
@using My1kWordsEe.Models.Games
@using My1kWordsEe.Models.Semantics
@using My1kWordsEe.Services
@using My1kWordsEe.Services.Cqs
@using My1kWordsEe.Services.Scoped
@using Microsoft.ApplicationInsights
@using System.Text.RegularExpressions

@inject EtNoun3FormsGameFactory EtNoun3FormsGameFactory
@inject NavigationManager Navigation
@inject TelemetryClient telemetry
@inject EtWordsCache etWordsCache;

@code {
    [Parameter]
    public string EtNoun { get; init; } = string.Empty;

    Maybe<EtNoun3FormsGame> Game;
    Maybe<string> GameGenerationError;

    private string GetRandomNoun()
    {
        var random = new Random(Environment.TickCount);

        var nouns = etWordsCache.AllWords.Where(w => w.DefaultSense.IsNoun).ToArray();

        var noun = nouns[random.Next(0, nouns.Length)];
        return noun.Value;
    }

    protected override async Task OnParametersSetAsync()
    {
        telemetry.TrackPageView(nameof(EtNoun3FormsGamePage));

        if (string.IsNullOrEmpty(EtNoun))
        {
            // Pick a random noun
            var randomNoun = GetRandomNoun();
            Navigation.NavigateTo($"/forms-game/et/{randomNoun}", forceLoad: true);
        }
        else
        {
            var gameGen = await EtNoun3FormsGameFactory.Generate(EtNoun);
            if (gameGen.IsSuccess)
            {
                Game = gameGen.Value;
            }
            else
            {
                GameGenerationError = gameGen.Error;
            }
            await base.OnParametersSetAsync();
        }
    }

    private void OnSubmit()
    {
        Game.Value.Submit();
    }

    private void OnGiveUp()
    {
        var game = Game.Value;
        game.GiveUp();
    }

    private void RegenGame()
    {
        Navigation.NavigateTo($"/forms-game/et/{GetRandomNoun()}", forceLoad: true);
    }

    private string MaskWord(string sentence, string word)
    {
        if (string.IsNullOrEmpty(sentence) || string.IsNullOrEmpty(word)) return sentence;
        // Simple case-insensitive replacement
        // Using Regex for word boundary might be better but let's stick to simple for now as forms might change ending.
        // Actually, the word in the sentence IS the form we are looking for.
        // So we are masking 'word' (which is the answer) in 'sentence'.
        return Regex.Replace(sentence, Regex.Escape(word), "_______", RegexOptions.IgnoreCase);
    }
}

<div class="text-left">
    <div class="row">
        <div class="col-7">
            <h3>Nimisõna 3 vormi (Noun 3 Forms)</h3>
        </div>
        <div class="col-5">
            @if (Game.HasValue && Game.Value.IsFinished)
            {
                <Button Color="ButtonColor.Primary" Type="ButtonType.Reset" @onclick="@RegenGame">
                    <i class="bi bi-arrow-repeat"></i>
                    Try again!
                </Button>
            }
        </div>
    </div>

    @if (Game.HasValue)
    {
        var game = Game.Value;

        <div class="row mb-3">
            <div class="col-12">
                <h5>Base Word: <a href="/word/@game.NimetavSõna" target="_blank"><strong>@game.NimetavSõna</strong></a></h5>
            </div>
        </div>

        <div class="row">
            @* Nimetav *@
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-header">Nimetav (Nominative)</div>
                    <div class="card-body">
                        <p class="card-text">@MaskWord(game.NimetavLause, game.NimetavSõna)</p>
                        @if (game.IsFinished)
                        {
                            <div class="mb-2">
                                @if (game.IsNimetavOk)
                                {
                                    <span class="text-success fw-bold">@game.NimetavSõna</span>
                                    <i class="bi bi-check-circle-fill text-success"></i>
                                }
                                else
                                {
                                    <span class="text-danger text-decoration-line-through">@game.UserNimetavSõna</span>
                                    <br />
                                    <span class="text-success fw-bold">@game.NimetavSõna</span>
                                }
                            </div>
                        }
                        else
                        {
                            <InputText @bind-Value="@game.UserNimetavSõna" class="form-control"
                                placeholder="Type word form..." />
                        }
                    </div>
                </div>
            </div>

            @* Omastav *@
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-header">Omastav (Genitive)</div>
                    <div class="card-body">
                        <p class="card-text">@MaskWord(game.OmastavLause, game.OmastavSõna)</p>
                        @if (game.IsFinished)
                        {
                            <div class="mb-2">
                                @if (game.IsOmastavOk)
                                {
                                    <span class="text-success fw-bold">@game.OmastavSõna</span>
                                    <i class="bi bi-check-circle-fill text-success"></i>
                                }
                                else
                                {
                                    <span class="text-danger text-decoration-line-through">@game.UserOmastavSõna</span>
                                    <br />
                                    <span class="text-success fw-bold">@game.OmastavSõna</span>
                                }
                            </div>
                        }
                        else
                        {
                            <InputText @bind-Value="@game.UserOmastavSõna" class="form-control"
                                placeholder="Type word form..." />
                        }
                    </div>
                </div>
            </div>

            @* Osastav *@
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-header">Osastav (Partitive)</div>
                    <div class="card-body">
                        <p class="card-text">@MaskWord(game.OsastavLause, game.OsastavSõna)</p>
                        @if (game.IsFinished)
                        {
                            <div class="mb-2">
                                @if (game.IsOsastavOk)
                                {
                                    <span class="text-success fw-bold">@game.OsastavSõna</span>
                                    <i class="bi bi-check-circle-fill text-success"></i>
                                }
                                else
                                {
                                    <span class="text-danger text-decoration-line-through">@game.UserOsastavSõna</span>
                                    <br />
                                    <span class="text-success fw-bold">@game.OsastavSõna</span>
                                }
                            </div>
                        }
                        else
                        {
                            <InputText @bind-Value="@game.UserOsastavSõna" class="form-control"
                                placeholder="Type word form..." />
                        }
                    </div>
                </div>
            </div>
        </div>

        @if (!game.IsFinished)
        {
            <div class="row mt-4">
                <div class="col-12 text-center">
                    <button class="btn btn-primary me-2" @onclick="OnSubmit">Submit</button>
                    <button class="btn btn-secondary" @onclick="OnGiveUp">Give Up</button>
                </div>
            </div>
        }
    }
    else if (GameGenerationError.HasNoValue)
    {
        <div class="d-flex justify-content-center">
            <Spinner />
        </div>
    }

    @if (GameGenerationError.HasValue)
    {
        <p class="text-danger">
            @GameGenerationError
        </p>
    }
</div>